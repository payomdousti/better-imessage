{
  "name": "imessage-search",
  "productName": "iMessage Search",
  "version": "1.0.0",
  "description": "A powerful search tool for your iMessage history",
  "main": "electron/main.js",
  "author": "Payom Dousti",
  "license": "MIT",
  "scripts": {
    "start": "node server/index.js",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "electron": "electron .",
    "electron:dev": "npm run build:dev && electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration"
  },
  "build": {
    "appId": "com.imessage-search.app",
    "productName": "iMessage Search",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "electron/**/*",
      "server/**/*",
      "public/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite3/**/*",
      "node_modules/sharp/**/*",
      "node_modules/heic-convert/**/*"
    ],
    "nodeGypRebuild": false,
    "npmRebuild": true,
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/entitlements.plist",
      "entitlementsInherit": "electron/entitlements.plist",
      "extendInfo": {
        "NSAppleEventsUsageDescription": "This app needs access to control other applications.",
        "NSSystemAdministrationUsageDescription": "This app needs admin privileges for certain operations."
      }
    },
    "dmg": {
      "title": "iMessage Search",
      "icon": "assets/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "bplist-parser": "^0.3.2",
    "express": "^4.19.2",
    "fuzzy": "^0.1.3",
    "heic-convert": "^2.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.34.5",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "@jest/test-sequencer": "^29.7.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@testing-library/user-event": "^14.5.0",
    "autoprefixer": "^10.4.22",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "style-loader": "^4.0.0",
    "supertest": "^6.3.4",
    "tailwindcss": "^4.1.17",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  }
}
